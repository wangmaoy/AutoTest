[
  {
    "description": "模拟一个没有参数的get请求",
    "request": {
      "uri": "/getdemo",
      "method": "get"
    },
    "response": {
      "headers":{"Content-Type":"text/html;charset=gbk"},
      "text": "this is a get request"
    }
  },
  {
    "description": "模拟一个带参数的get请求",
    "request": {
      "uri": "/getwithparam",
      "method": "get",
      "queries":{
        "name":"huhansan",
        "age":"18"
      }
    },
    "response":{

      "headers":{"Content-Type":"text/html;charset=gbk"},
      "status":200,
      "text":"我huhansan又回来了"
    }
  }
]